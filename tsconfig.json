{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "ES2020",
    "lib": ["dom", "es6", "es2017", "ES2020", "esnext.asynciterable"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/", "src/*", "src/**/*.txt", "src/**/*.ts", "src/template/**/*.txt"],
  "lib": ["es2015"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
